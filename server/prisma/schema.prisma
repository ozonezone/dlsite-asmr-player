datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider    = "cargo prisma"
  output      = "../src/prisma.rs"
  module_path = "prisma"
}

enum ProductAge {
  ALL_AGE
  R_RATED
  ADULT
}

model Product {
  // RJ_id
  id               String             @id
  name             String
  description      String?
  series           String?
  seriesName       String?
  circle           Circle             @relation(fields: [circleId], references: [id])
  circleId         String
  actor            String[]
  author           String[]
  illustrator      String[]
  // JPY
  price            Int
  saleCount        Int
  age              ProductAge
  releasedAt       DateTime
  genre            Genre[]
  rating           Float?
  ratingCount      Int
  commentCount     Int
  productUserGenre ProductUserGenre[]
  path             String
}

model Genre {
  id               String             @id
  name             String
  products         Product[]
  productUserGenre ProductUserGenre[]
}

model ProductUserGenre {
  productId String
  genreId   String
  // Count of genre selected by user
  voteCount Int
  product   Product @relation(fields: [productId], references: [id])
  genre     Genre   @relation(fields: [genreId], references: [id])

  @@id([genreId, productId])
}

model Circle {
  id      String    @id
  name    String
  Product Product[]
}
